{
  "manifest_version": 3,
  "name": "URL Opener",
  "version": "1.1",
  "description": "Opens multiple URLs in separate Chrome tabs one by one and checks Facebook post states.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting",
    "identity"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://docs.google.com/spreadsheets/*",
    "https://sheets.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "URL Opener"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/groups/*/my_pending_content*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}