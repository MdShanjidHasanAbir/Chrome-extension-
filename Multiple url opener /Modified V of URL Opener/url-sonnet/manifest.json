{
  "manifest_version": 3,
  "name": "URL Opener & Facebook Post Checker",
  "version": "2.0",
  "description": "Opens multiple URLs and checks Facebook post states with Google Sheets integration",
  "permissions": ["tabs", "activeTab", "storage", "scripting"],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://sheets.googleapis.com/*",
    "https://docs.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "URL Opener & FB Checker"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/groups/*/my_pending_content*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}